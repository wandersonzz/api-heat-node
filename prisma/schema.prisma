generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:2209@localhost:5432/db_nodejs?schema=public"
}

model User {
  id         String @id @default(uuid())
  name       String
  github_id  Int
  avatar_url String
  login      String

  @@map("users")
  messages Message[]
}

model Message {

  id         String   @id @default(uuid())
  text       String
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])


  @@map("messages")
  user_id String
}
